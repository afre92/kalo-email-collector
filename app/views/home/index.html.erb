<div>
  <nav class="navbar navbar-light bg-light" style="background-color: #83c9ad">
    <h3 class="text-center" style="color: #403e38; margin-bottom: 20px;"> Welcome to Kalo Boutique</h3>
  </nav>
  <div class="main-container">
    <div class="kalo-logo">
      <%= image_tag 'KALO_COLOR.png'%>
    </div>
    <div class="text-center" style="color: #403e38;padding-top: 15px; padding-bottom: 15px;">
      <h2>SIGN UP FOR KALO NEWSLETTER!</h2>
      <p style="color: #aba9a9; font-size:20px"> Duis aute irure dolor in reprehenderit </p>
    </div>
    <div class="form-container">
      <%= form_for User.new do |f| %>
        <div class="form-group">
          <label> First Name </label>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <label> Last Name </label>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <label> Email </label>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group text-center" style="padding-top:30px">
          <button class="btn btn-primary btn-lg block" type="submit">Sign Up</button>
        </div>
      <% end %>
    </div>
  </div>
  
</div>
<footer class="text-center">
  <div style="border-top: 2px #dcdcdc solid">
    <h4>Kalo Boutique 2020</h4>
  </div>
</footer>